<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ssms.controller.PersonalCenter"
	xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<Page showHeader="false">
		<subHeader>
			<core:Fragment fragmentName="ssms.view.Header" type="XML"/>
		</subHeader>
		<content>
			<HBox>
				<VBox class="ssmsPersonalCenter-personalInfo">
					<Text text="{InfoModel>/firstName} {InfoModel>/lastName}" class="ssmsPersonalCenter-personalInfo-name"/>
					<Label text="{i18n>LABEL_PERSONALCENTER_ID}"/>
					<Text text="{InfoModel>/name}" class="ssmsPersonalCenter-personalInfo-common"/>
					<Label text="{i18n>LABEL_PERSONALCENTER_EMAIL}"/>
					<Text text="{InfoModel>/email}" class="ssmsPersonalCenter-personalInfo-common"/>
					<Label text="{i18n>LABEL_PERSONALCENTER_ROLE}"/>
					<Text  text="{InfoModel>/role}" class="ssmsPersonalCenter-personalInfo-common"/>
					<Label text="{i18n>LABEL_PERSONALCENTER_TEAM}"/>
					<Text  text="{InfoModel>/team}"/>
				</VBox>
			    <VBox justifyContent="Center" class="sapUiMediumMarginTop ssmsPersonalCenter-sessions">
				<StandardTile id="createSession" icon="sap-icon://create" title="{i18n>TITLE_PERSONALCENTER_CREATESESSION}"  press="onPressTile" class="ssmsPersonalCenter-create ssmsPersonalCenter-common"/>
				<StandardTile id="ownedSession" icon="sap-icon://account" title="{i18n>TITLE_PERSONALCENTER_OWNSESSION}" press="onPressTile" class="ssmsPersonalCenter-common"/>
				</VBox>
				<VBox justifyContent="Center" class="sapUiMediumMarginTop">
				<StandardTile id="commentedSession" icon="sap-icon://comment" title="{i18n>TITLE_PERSONALCENTER_COMMENTEDSESSION}" press="onPressTile" class="ssmsPersonalCenter-create ssmsPersonalCenter-common"/>
				<StandardTile id="joinedSession" icon="sap-icon://collaborate" title="{i18n>TITLE_PERSONALCENTER_JOINEDSESSION}" press="onPressTile" class="ssmsPersonalCenter-common"/>
				</VBox>
			</HBox>
		</content>
	</Page>
</mvc:View>