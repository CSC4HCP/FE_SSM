<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="ssms-dialog">
		<List>
			<InputListItem label="{i18n>OBJECTPAGESECTION_SESSIONDETAIL_DIALOG_AUTHOR}">
				<Text width="250px"  design="Bold"  value="{CommentModel/author}"/>
			</InputListItem>
			<InputListItem id="ssms-created" label="{i18n>OBJECTPAGESECTION_SESSIONDETAIL_DIALOG_CREATED}">
				<Text width="250px"  design="Bold"  value="{path:'CommentModel/date',formatter:'.formatter.formatDateTime'}"/>
			</InputListItem><InputListItem label="{i18n>OBJECTPAGESECTION_SESSIONDETAIL_DIALOG_COMMENT}">
				<TextArea width="250px" id="ssms-comment" value="{CommentModel/content}"/>
			</InputListItem>
		</List>
		<beginButton>
			<Button text="Save" press="onOKDialog" type="Accept"/>
		</beginButton>
		<endButton>
			<Button text="Close" press="onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>