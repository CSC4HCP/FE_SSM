<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ssms.controller.OwnedSession"
	xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<Page showHeader="false">
		<subHeader>
			<core:Fragment fragmentName="ssms.view.Header" type="XML"/>
		</subHeader>
		<content>
			<IconTabBar id="ssms-IconTabBar" select="getSessionByStatus" class="sapUiResponsiveContentPadding ssmsOwnedSession-IconTabBar"
				expandable="false">
				<items>
					<IconTabFilter showAll="true" id="iconTabFilterAll" text="{i18n>TEXT_OWNSESSION_SESSIONS}" key="All">
						<Table id="ssmsOwnsession-All" inset="false" items="{SessionModel>/}">
							<columns>
								<Column width="14em">
									<Text text="{i18n>TEXT_OWNSESSION_TOPIC}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_CATEGORY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_VISIBILITY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_TIME}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_LOCATION}"/>
								</Column>
								<Column>
									<Text text="{i18n>TEXT_OWNSESSION_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onPressedColumnListItem" class="ssmsColorChangingText" type="Navigation" counter="{SessionModel>id}">
									<cells>
										<Text text="{SessionModel>topic}"/>
										<Text text="{SessionModel>category}"/>
										<Text text="{path:'SessionModel>visibility',formatter:'.formatter.formatVisibility'}"/>
										<Text text="{path: 'SessionModel>meetingTime',formatter:'.formatter.formatDateTime'}"/>
										<Text text="{SessionModel>meetingRoom}"/>
										<ObjectNumber emphasized="false" number="{SessionModel>status}"
											state="{path:'SessionModel>status',formatter:'.formatter.formatStatusToColor'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabSeparator/>
					<IconTabFilter icon="sap-icon://accept" id="iconTabFilterOpen" iconColor="Default" text="{i18n>TEXT_OWNSESSION_OPEN}" key="Open">
						<Table id="ssmsOwnsession-Open" inset="false" items="{SessionModel>/}">
							<columns>
								<Column width="14em">
									<Text text="{i18n>TEXT_OWNSESSION_TOPIC}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_CATEGORY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_VISIBILITY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_TIME}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_LOCATION}"/>
								</Column>
								<Column>
									<Text text="{i18n>TEXT_OWNSESSION_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onPressedColumnListItem" class="ssmsColorChangingText" counter="{SessionModel>id}" type="Navigation">
									<cells>
										<Text text="{SessionModel>topic}"/>
										<Text text="{SessionModel>category}"/>
										<Text text="{path:'SessionModel>visibility',formatter:'.formatter.formatVisibility'}"/>
										<Text text="{path: 'SessionModel>meetingTime',formatter:'.formatter.formatDateTime'}"/>
										<Text text="{SessionModel>meetingRoom}"/>
										<ObjectNumber emphasized="false" number="{SessionModel>status}"
											state="{path:'SessionModel>status',formatter:'.formatter.formatStatusToColor'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://begin" iconColor="Positive" text="{i18n>TEXT_OWNSESSION_INPROCESS}" key="In Progress">
						<Table id="ssmsOwnsession-InProgress" inset="false" items="{SessionModel>/}">
							<columns>
								<Column width="14em">
									<Text text="{i18n>TEXT_OWNSESSION_TOPIC}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_CATEGORY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_VISIBILITY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_TIME}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_LOCATION}"/>
								</Column>
								<Column>
									<Text text="{i18n>TEXT_OWNSESSION_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onPressedColumnListItem" class="ssmsColorChangingText" type="Navigation" counter="{SessionModel>id}">
									<cells>
										<Text text="{SessionModel>topic}"/>
										<Text text="{SessionModel>category}"/>
										<Text text="{path:'SessionModel>visibility',formatter:'.formatter.formatVisibility'}"/>
										<Text text="{path: 'SessionModel>meetingTime',formatter:'.formatter.formatDateTime'}"/>
										<Text text="{SessionModel>meetingRoom}"/>
										<ObjectNumber emphasized="false" number="{SessionModel>status}"
											state="{path:'SessionModel>status',formatter:'.formatter.formatStatusToColor'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://decline" id="iconTabFilterCanceled" iconColor="Critical" text="{i18n>TEXT_OWNSESSION_CANCELED}"
						key="Cancelled">
						<Table id="ssmsOwnsession-Cancelled" inset="false" items="{SessionModel>/}">
							<columns>
								<Column width="14em">
									<Text text="{i18n>TEXT_OWNSESSION_TOPIC}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_CATEGORY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_VISIBILITY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_TIME}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_LOCATION}"/>
								</Column>
								<Column>
									<Text text="{i18n>TEXT_OWNSESSION_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onPressedColumnListItem" class="ssmsColorChangingText" type="Navigation" counter="{SessionModel>id}">
									<cells>
										<Text text="{SessionModel>topic}"/>
										<Text text="{SessionModel>category}"/>
										<Text text="{path:'SessionModel>visibility',formatter:'.formatter.formatVisibility'}"/>
										<Text text="{path: 'SessionModel>meetingTime',formatter:'.formatter.formatDateTime'}"/>
										<Text text="{SessionModel>meetingRoom}"/>
										<ObjectNumber emphasized="false" number="{SessionModel>status}"
											state="{path:'SessionModel>status',formatter:'.formatter.formatStatusToColor'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
					<IconTabFilter icon="sap-icon://complete" iconColor="Negative" id="iconTabFilterClosed" text="{i18n>TEXT_OWNSESSION_CLOSED}" key="Closed">
						<Table id="ssmsOwnsession-Closed" inset="false" items="{SessionModel>/}">
							<columns>
								<Column width="14em">
									<Text text="{i18n>TEXT_OWNSESSION_TOPIC}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_CATEGORY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_VISIBILITY}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_TIME}"/>
								</Column>
								<Column width="14em" demandPopin="true">
									<Text text="{i18n>TEXT_OWNSESSION_LOCATION}"/>
								</Column>
								<Column>
									<Text text="{i18n>TEXT_OWNSESSION_STATUS}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem press="onPressedColumnListItem" class="ssmsColorChangingText" type="Navigation" counter="{SessionModel>id}">
									<cells>
										<Text text="{SessionModel>topic}"/>
										<Text text="{SessionModel>category}"/>
										<Text text="{path:'SessionModel>visibility',formatter:'.formatter.formatVisibility'}"/>
										<Text text="{path: 'SessionModel>meetingTime',formatter:'.formatter.formatDateTime'}"/>
										<Text text="{SessionModel>meetingRoom}"/>
										<ObjectNumber emphasized="false" number="{SessionModel>status}"
											state="{path:'SessionModel>status',formatter:'.formatter.formatStatusToColor'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>